+          TYPE (STRUCT1) SINST
+
+          IF(SINST%ID.NE.8) STOP 1
+          IF(SINST%TYPE.NE.5) STOP 2
+          IF(SINST%DEFVAL.NE.0) STOP 3
+          IF(SINST%NAME.NE.'tests') STOP 4
